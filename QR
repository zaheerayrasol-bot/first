    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const qrCanvas = document.getElementById('qr-canvas');
            const ctx = qrCanvas.getContext('2d');
            
            // Initialize with sample QR code
            generateSampleQR();

            function generateSampleQR() {
                const text = 'https://example.com';
                
                QRCode.toCanvas(qrCanvas, text, {
                    width: 300,
                    margin: 1,
                    color: {
                        dark: '#000000',
                        light: '#ffffff'
                    }
                }, function(error) {
                    if (error) console.error(error);
                });
            }

            // Add interactivity to navigation pills
            const navPills = document.querySelectorAll('.nav-pill');
            navPills.forEach(pill => {
                pill.addEventListener('click', function() {
                    navPills.forEach(p => p.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            // Pattern selection
            const patternOptions = document.querySelectorAll('.pattern-option');
            patternOptions.forEach(option => {
                option.addEventListener('click', function() {
                    patternOptions.forEach(o => o.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            // Color input synchronization
            const colorInputs = document.querySelectorAll('input[type="color"]');
            colorInputs.forEach(input => {
                const textInput = input.nextElementSibling;
                input.addEventListener('input', function() {
                    textInput.value = this.value;
                });
                textInput.addEventListener('input', function() {
                    if (this.value.match(/^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$/)) {
                        input.value = this.value;
                    }
                });
            });
        });
    </script>
